<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C78FEF">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="გამოკითხვა"
        android:textColor="#0220C6"
        android:textSize="47sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.ხართ თუ არა ვაქცინირებული?"
                android:textColor="#021685"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">


            <CheckBox
                android:id="@+id/chek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="კი"
                android:textColor="#021685"/>

            <CheckBox
                android:id="@+id/chek2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="არა"
                android:textStyle="italic"
                android:textColor="#021685"/>
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.გთხოვთ, მიუთითოთ ვაქცინაცის სახელი"
                android:textColor="#021685"
                android:textSize="18sp"/>
        <EditText
            android:id="@+id/saxeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ვაქცინის სახელი"
            android:textColor="#021685"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3C52CD"
            android:text="დადასტურება"
            android:textSize="20sp"
            android:textStyle="italic"/>


        </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>